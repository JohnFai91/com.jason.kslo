<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        android:id="@+id/changelogCardView"
        app:cardBackgroundColor="@android:color/transparent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <View
                        android:id="@+id/changelogLineIdentifier"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginHorizontal="10dp"
                        android:background="@android:color/holo_blue_light"/>

                <ImageView
                        android:layout_marginTop="30dp"
                        android:layout_marginStart="10dp"
                        android:id="@+id/changelogArrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_up"
                        android:contentDescription="@string/Up"/>

                <TextView
                        android:layout_below="@id/rightChangelog"
                        android:layout_alignStart="@id/rightChangelog"
                        android:id="@+id/leftChangelog"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:textIsSelectable="true"/>
                <TextView
                        android:layout_toEndOf="@id/changelogArrow"
                        android:id="@+id/rightChangelog"
                        android:layout_width="match_parent"
                        android:layout_marginTop="50dp"
                        android:layout_height="wrap_content"
                        android:textIsSelectable="true"/>
                <TextView
                        android:layout_margin="10dp"
                        android:width="100dp"
                        android:layout_below="@id/changelogArrow"
                        android:id="@+id/changelogVersion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textIsSelectable="true"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>