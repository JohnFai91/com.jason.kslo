<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_marginVertical="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:id="@+id/School_Logo"
                    android:src="@drawable/school_logo"
                    android:contentDescription="@string/schoolLogo"
                    android:layout_marginHorizontal="20dp"/>
            <View
                android:background="@color/imageFront"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_alignStart="@id/School_Logo"
                android:layout_alignEnd="@id/School_Logo"
                android:layout_alignTop="@id/School_Logo"
                android:layout_alignBottom="@id/School_Logo"/>
        </RelativeLayout>

            <Button
                    android:layout_marginTop="10dp"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:id="@+id/Settings_button"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:text="@string/Settings"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/default_button_background"
                    android:textColor="@color/white"
                    android:drawableEnd="@drawable/ic_settings"
                    android:paddingEnd="20dp"
                    android:textAllCaps="false">
            </Button>

        <Button
                android:layout_marginTop="10dp"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:id="@+id/CheckForUpdate"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="@string/CheckForUpdate"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/default_button_background"
                android:textColor="@color/white"
                android:drawableEnd="@drawable/ic_update"
                android:paddingEnd="20dp"
                android:textAllCaps="false">
        </Button>

        <Button
                android:layout_marginTop="10dp"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:id="@+id/CrashApp"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="@string/CrashApp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/default_button_background"
                android:drawableEnd="@drawable/ic_error"
                android:textColor="@color/white"
                android:paddingEnd="20dp"
                android:textAllCaps="false">
        </Button>

        <Button
                android:layout_marginTop="30dp"
                android:id="@+id/button_ChangeLog"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="@string/changelog"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/default_button_background"
                android:textColor="@color/white"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:drawableEnd="@drawable/ic_change"
                android:textAllCaps="false"
                android:layout_marginBottom="10dp">
        </Button>

        <Button
                android:id="@+id/showDownloadedFiles"
                android:layout_marginBottom="30dp"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="@string/DownloadedFiles"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/spinner_background"
                android:textColor="@color/white"
                android:drawableEnd="@drawable/ic_download"
                android:textAllCaps="false">
        </Button>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Thanks"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:textAllCaps="false">
        </TextView>
        <Button
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:text="@string/Half_Day_Schedule"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/Half_Day_Schedule"
                    android:background="@drawable/spinner_background"
                    android:textColor="@color/white"
                    android:drawableEnd="@drawable/ic_schedule"
                    android:paddingEnd="20dp"
                    android:textAllCaps="false">
            </Button>

            <Button
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:text="@string/School_Cal"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/SchoolCal"
                    android:background="@drawable/spinner_background"
                    android:textColor="@color/white"
                    android:paddingEnd="20dp"
                    android:paddingStart="20dp"
                    android:drawableEnd="@drawable/ic_calendar"
                    android:textAllCaps="false" tools:ignore="RtlHardcoded">
            </Button>

            <Button
                    android:layout_marginBottom="10dp"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:text="@string/Featured_Notice"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/Featured_Notice"
                    android:background="@drawable/spinner_background"
                    android:textColor="@color/white"
                    android:drawableEnd="@drawable/ic_attachment"
                    android:textAllCaps="false">
            </Button>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_red_light"
                android:text="@string/Description"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:id="@+id/description"
                android:textAllCaps="false">
        </TextView>

        <Button
                android:layout_marginTop="10dp"
                android:id="@+id/button_myWebsite"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="@string/Website"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/default_button_background"
                android:textColor="@color/white"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:drawableEnd="@drawable/ic_web"
                android:textAllCaps="false">
        </Button>

        <Button
                android:layout_marginTop="10dp"
                android:id="@+id/button_SourceCode"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="@string/SourceCode"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/default_button_background"
                android:textColor="@color/white"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:drawableEnd="@drawable/ic_source"
                android:textAllCaps="false">
        </Button>

        <Button
                android:layout_marginTop="10dp"
                android:id="@+id/button_JoinDevelopment"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="@string/JoinDevelopment"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/default_button_background"
                android:textColor="@color/white"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:paddingEnd="20dp"
                android:paddingStart="20dp"
                android:drawableEnd="@drawable/ic_developer"
                android:textAllCaps="false">
        </Button>

        <TextView
                android:text="@string/Usages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:textAllCaps="false">
        </TextView>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Locale"
                android:gravity="center_horizontal"
                android:textAllCaps="false">
        </TextView>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Theme"
                android:gravity="center_horizontal"
                android:textAllCaps="false">
        </TextView>

        <TextView
                android:id="@+id/Version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:textAllCaps="false"
                android:layout_marginBottom="10dp">
        </TextView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
