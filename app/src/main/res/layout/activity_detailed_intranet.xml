<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20sp">

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/detailedIntranetHeader">
                        <TextView
                                android:id="@+id/detailedIntranetTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="20sp"
                                android:textColor="@android:color/holo_blue_light"
                                android:textIsSelectable="true"
                                android:layout_marginHorizontal="15dp"
                                android:layout_marginTop="15dp"/>

                        <TextView
                                android:id="@+id/detailedIntranetReceiver"
                                android:textColor="@color/blue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/detailedIntranetTitle"
                                android:layout_margin="15dp"/>

                        <TextView
                                android:layout_margin="15dp"
                                android:textSize="12sp"
                                android:id="@+id/detailedIntranetDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAlignment="gravity"
                                android:gravity="start"
                                android:layout_alignParentBottom="true"
                                android:textIsSelectable="true"/>
                        <TextView
                                android:layout_margin="15dp"
                                android:textSize="15sp"
                                android:textColor="@android:color/holo_blue_light"
                                android:id="@+id/detailedIntranetAuthor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAlignment="gravity"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentBottom="true"
                                android:textIsSelectable="true"
                                tools:ignore="RelativeOverlap"/>
            </RelativeLayout>
                <TextView
                        android:textSize="18sp"
                        android:layout_margin="10dp"
                        android:id="@+id/detailedIntranetText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textIsSelectable="true"/>

                <ProgressBar
                        android:id="@+id/detailedIntranetProgressBar"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                />

            <androidx.recyclerview.widget.RecyclerView
                    android:paddingHorizontal="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/recyclerViewDetailIntranetFile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:fastScrollEnabled="true"
                    app:fastScrollHorizontalThumbDrawable="@drawable/thumb_drawable"
                    app:fastScrollHorizontalTrackDrawable="@drawable/line_drawable"
                    app:fastScrollVerticalThumbDrawable="@drawable/thumb_drawable"
                    app:fastScrollVerticalTrackDrawable="@drawable/line_drawable"/>
        </LinearLayout>
</ScrollView>