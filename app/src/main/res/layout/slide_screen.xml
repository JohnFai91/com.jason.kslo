<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/SlideScreenBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
                android:textColor="@android:color/holo_purple"
                android:text="@string/Dashboard"
                android:textSize="25sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:paddingVertical="50dp"
                android:id="@+id/SlideTitle"/>

                <ImageView
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/ic_previous"
                        android:id="@+id/previous"
                        android:layout_gravity="center"
                        android:contentDescription="@string/previous"/>

                <ImageView
                        android:layout_alignParentRight="true"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/ic_next"
                        android:id="@+id/next"
                        android:layout_gravity="center"
                        android:layout_alignParentEnd="true"
                        android:contentDescription="@string/next"/>

            <LinearLayout
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="60dp">


                <TextView
                        android:text="@string/ShowHomework"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/SlideDesc"
                        android:textAlignment="center"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center_horizontal"
                        android:foregroundGravity="center"
                        android:paddingBottom="10dp"/>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal">
                    <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            app:srcCompat="@drawable/selected"
                            android:layout_marginRight="8dp"
                            android:layout_marginEnd="8dp"
                            android:id="@+id/pgNo.1"
                            android:contentDescription="@string/Page1"/>
                    <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            app:srcCompat="@drawable/selected"
                            android:layout_marginRight="8dp"
                            android:layout_marginEnd="8dp"
                            android:id="@+id/pgNo.2"
                            android:contentDescription="@string/Page2"/>
                    <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            app:srcCompat="@drawable/selected"
                            android:layout_marginRight="8dp"
                            android:layout_marginEnd="8dp"
                            android:id="@+id/pgNo.3"
                            android:contentDescription="@string/Page3"/>
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        app:srcCompat="@drawable/selected"
                        android:layout_marginRight="8dp"
                        android:layout_marginEnd="8dp"
                        android:id="@+id/pgNo.4"
                        android:contentDescription="@string/Page4"/>
                </LinearLayout>

            </LinearLayout>

            <Button
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/GetStartedBtn"
                    android:text="@string/GetStarted"
                    android:textAllCaps="false"
                    android:background="@android:color/holo_orange_light"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="50dp"
            android:layout_marginVertical="120dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/Photo"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            />

</RelativeLayout>