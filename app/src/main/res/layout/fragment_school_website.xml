<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
                android:background="?android:attr/windowBackground"
                app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                        android:id="@+id/SchoolWebsitePagerSwitcher"
                        android:background="@android:color/transparent"
                        android:layout_alignBottom="@id/SchoolWebsiteText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                <TextView
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/SchoolWebsiteTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/SchoolWebsite"
                        android:textSize="20sp"
                        android:textColor="@color/blue"/>

                <TextView
                        android:layout_marginHorizontal="10dp"
                        android:id="@+id/SchoolWebsiteText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/SchoolWebsiteTitle"
                        android:textSize="15sp"
                        android:textColor="@color/red"
                        android:text="@string/ReturnTo"/>

                <TextView
                        android:layout_marginHorizontal="10dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignBottom="@id/SchoolWebsiteText"
                        android:layout_marginVertical="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tapToViewMore"/>
            </RelativeLayout>

            <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/SchoolWebsiteViewPager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
</LinearLayout>