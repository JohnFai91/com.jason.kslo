<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                            android:layout_marginLeft="10dp"
                            android:textSize="20sp"
                            android:textColor="@android:color/holo_red_light"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/TestingFeature"
                            android:layout_marginStart="10dp"/>

                <TextView
                        android:layout_alignParentRight="true"
                        android:paddingRight="20dp"
                        android:paddingLeft="20dp"
                        android:textSize="20sp"
                        android:textColor="@android:color/holo_red_light"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Pictures"
                        tools:ignore="RelativeOverlap"
                        android:layout_alignParentEnd="true"
                        android:paddingEnd="20dp"/>
                <RelativeLayout
                            android:layout_centerHorizontal="true"
                            android:layout_width="225dp"
                            android:layout_height="150dp"
                            android:id="@+id/TitleDetailedLayout">
                            <ImageView
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="30dp"
                                    android:layout_centerHorizontal="true"
                                    android:id="@+id/TitleDetailedImage"
                                    android:layout_width="225dp"
                                    android:layout_height="150dp"
                                    android:scaleType="centerCrop"
                                    android:src="#88888888"/>

                            <TextView
                                    android:layout_alignBottom="@id/TitleDetailedImage"
                                    android:id="@+id/TitleDetailedText"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom"
                                    style="@style/TextAppearance.AppCompat.Medium"
                                    android:textColor="@color/white"
                                    android:layout_marginStart="12dp"
                                    android:layout_marginEnd="12dp"
                                    android:layout_marginBottom="12dp"/>
            </RelativeLayout>


                <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerViewDetail"
                        android:layout_marginTop="170dp"
                        android:layout_centerHorizontal="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="8dp"/>
    </RelativeLayout>
</ScrollView>