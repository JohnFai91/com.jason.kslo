<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20sp">

                    <TextView
                            android:id="@+id/LatestNewsDetailedTextTitle"
                            android:layout_marginTop="20sp"
                            android:layout_marginHorizontal="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:textColor="@android:color/holo_blue_bright"
                            android:textSize="25sp"
                            android:layout_marginStart="12dp"
                            android:layout_marginEnd="12dp"
                            android:layout_marginBottom="12dp"/>

                    <TextView
                            android:layout_marginHorizontal="15dp"
                            android:id="@+id/LatestNewsDetailedText"
                            android:textSize="20sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/LatestNewsDetailedTextTitle"/>

                <androidx.recyclerview.widget.RecyclerView
                        android:padding="10dp"
                        android:layout_marginTop="20sp"
                        android:id="@+id/recyclerViewDetailLatestNews"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/LatestNewsDetailedText"/>

                <ProgressBar
                        android:id="@+id/detailedLatestNewsProgressBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"/>
                <Button
                        android:visibility="gone"
                        android:id="@+id/openVideo"
                        android:text="@string/openVideo"
                        android:paddingHorizontal="20sp"
                        android:drawableRight="@drawable/ic_open"
                        android:layout_marginHorizontal="12sp"
                        android:background="@drawable/blue_background"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/ic_open"
                        android:layout_below="@id/recyclerViewDetailLatestNews"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:paddingHorizontal="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/recyclerViewDetailLatestNewsFile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/openVideo"/>
        </RelativeLayout>
</ScrollView>