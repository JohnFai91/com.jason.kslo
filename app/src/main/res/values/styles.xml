<resources>

    <style name="AppTheme.MaterialComponents" parent="@style/Theme.MaterialComponents.DayNight">
        <item name="textAllCaps">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">#009688</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">#8BC34A</item>
        <item name="android:autoLink">web</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.AppCompat.DayNight.FullScreen">
        <item name="textAllCaps">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@drawable/splash_image</item>
    </style>

    <style name="AppTheme.Actionbar" parent="Theme.AppCompat.DayNight">
        <item name="textAllCaps">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="windowActionBar">true</item>
        <item name="colorPrimary">#009688</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">#8BC34A</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:autoLink">web</item>
    </style>

</resources>