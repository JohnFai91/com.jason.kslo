<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.jason.kslo">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_DOWNLOAD_MANAGER"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES"/>
    <uses-permission
            android:name="android.permission.INSTALL_PACKAGES"
            tools:ignore="ProtectedPermissions"/>

    <application
            android:name=".App"
            android:allowBackup="true"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:fullBackupContent="true"
            android:hardwareAccelerated="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:largeHeap="false"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/SplashScreenTheme"
            android:usesCleartextTraffic="true"
            tools:targetApi="m">
        <activity
                android:name=".main.activity.MainActivity"
                android:configChanges="keyboardHidden|orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".main.DownloadView"
                android:configChanges="keyboardHidden|orientation|screenSize"
                android:theme="@style/Theme.AppCompat.DayNight.FullScreen.Actionbar">
        </activity>
        <activity
                android:name=".main.pdfView.PdfViewFeaturedNotice"
                android:configChanges="keyboardHidden|orientation|screenSize"
                android:theme="@style/Theme.AppCompat.DayNight.FullScreen.Actionbar">
            <intent-filter>
                <action android:name="android.intent.category.ALTERNATIVE"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".main.pdfView.PdfViewHalfDaySchedule"
                android:configChanges="keyboardHidden|orientation|screenSize"
                android:theme="@style/Theme.AppCompat.DayNight.FullScreen.Actionbar">
            <intent-filter>
                <action android:name="android.intent.category.LAUNCHER"/>

                <category android:name="android.intent.category.ALTERNATIVE"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".main.pdfView.PdfViewSchoolCal"
                android:configChanges="keyboardHidden|orientation|screenSize"
                android:theme="@style/Theme.AppCompat.DayNight.FullScreen.Actionbar">
            <intent-filter>
                <action android:name="android.intent.category.LAUNCHER"/>

                <category android:name="android.intent.category.ALTERNATIVE"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".main.activity.SettingsActivity"
                android:configChanges="keyboardHidden|orientation|screenSize"
                android:theme="@style/Theme.AppCompat.DayNight.FullScreen.Actionbar">
            <intent-filter>
                <action android:name="android.intent.category.LAUNCHER"/>

                <category android:name="android.intent.category.ALTERNATIVE"/>
            </intent-filter>
        </activity>

        <service
                android:name=".autoUpdate.DownloadService"
                android:exported="false"/>

        <provider
                android:name=".autoUpdate.UpdateApkFileProvider"
                android:authorities="${applicationId}.update.provider"
                android:exported="false"
                android:grantUriPermissions="true">
            <meta-data
                    android:name="android.support.FILE_PROVIDER_PATHS"
                    android:resource="@xml/update_apk_paths"/>
        </provider>
        <provider
                android:name="androidx.core.content.FileProvider"
                android:authorities="${applicationId}.provider"
                android:exported="false"
                android:grantUriPermissions="true">
            <meta-data
                    android:name="android.support.FILE_PROVIDER_PATHS"
                    android:resource="@xml/provider_paths"/>
        </provider>

        <activity
                android:name=".intro.SlideActivity"
                android:configChanges="keyboardHidden|orientation|screenSize"
                android:theme="@style/Theme.AppCompat.DayNight.FullScreen">
            <intent-filter>
                <action android:name="android.intent.category.LAUNCHER"/>

                <category android:name="android.intent.category.ALTERNATIVE"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".parseContent.defaultParseContent.activity.DetailedImageActivity"
                android:configChanges="keyboardHidden|orientation|screenSize"
                android:theme="@style/Theme.AppCompat.DayNight.FullScreen.Actionbar">
        </activity>
        <activity
                android:name=".parseContent.defaultParseContent.activity.DetailedLatestNewsActivity"
                android:configChanges="keyboardHidden|orientation|screenSize"
                android:theme="@style/Theme.AppCompat.DayNight.FullScreen.Actionbar">
        </activity>
        <activity
                android:name=".parseContent.loggedInParseContent.activity.DetailedIntranetActivity"
                android:configChanges="keyboardHidden|orientation|screenSize"
                android:theme="@style/Theme.AppCompat.DayNight.FullScreen.Actionbar">
        </activity>
        <activity
                android:name=".main.changelog.ChangelogActivity"
                android:configChanges="keyboardHidden|screenSize"
                android:screenOrientation="userPortrait"
                android:theme="@style/Theme.AppCompat.DayNight.FullScreen.Actionbar">
            <intent-filter>
                <action android:name="android.intent.category.LAUNCHER"/>

                <category android:name="android.intent.category.ALTERNATIVE"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".parseContent.loggedInParseContent.activity.LoginActivity"
                android:configChanges="keyboard|orientation|screenSize"
                android:theme="@style/Theme.AppCompat.DayNight.FullScreen.Actionbar">
            <intent-filter>
                <category android:name="android.intent.category.ALTERNATIVE"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".crashActivity.customOnCrashActivity"
                android:process=":error_activity"/>

        <provider
                android:name=".crashActivity.CaocInitProvider"
                android:authorities="${applicationId}.customactivityoncrashinitprovider"
                android:exported="false"
                android:initOrder="101"/>

        <activity
                android:name=".parseContent.loggedInParseContent.activity.detailedBooksActivity"
                android:configChanges="keyboardHidden|orientation|screenSize"
                android:theme="@style/Theme.AppCompat.DayNight.FullScreen.Actionbar">
        </activity>
    </application>

</manifest>